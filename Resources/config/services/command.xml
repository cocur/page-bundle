<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cocur_blog.command.dropbox_auth.class">Cocur\Bundle\BlogBundle\Command\DropboxAuthCommand</parameter>
    </parameters>

    <services>

        <service id="cocur_blog.command.dropbox_auth" class="%cocur_blog.command.dropbox_auth.class%">
            <argument type="service" id="cocur_blog.dropbox.oauth" />
            <argument>%kernel.root_dir%</argument>
            <tag name="console.command" />
        </service>

    </services>

</container>
